<% if notice %>
  <div class="mapple-message alert alert-info alert-dismissible fade show m-1" role="alert">
    <%= notice.downcase %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
    </button>
  </div>
<% end %>
<% if alert %>
  <div class="mapple-message alert alert-warning alert-dismissible fade show m-1" role="alert">
    <%= alert.downcase %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
    </button>
  </div>
<% end %>
