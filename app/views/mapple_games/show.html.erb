<div class="d-flex flex-column justify-content-center align-items-center vh-100" data-controller="" data-insert-question-my-value="<%= @questions_content.to_json %>">

  <div>
    <h1>
      <% @mapple_game.country.name.length.times do %>
        _
      <% end %>
    </h1>
  </div>

  <div class="mt-3">
    <h4 style="max-width: 550px; text-align: center;"><%= @question %></h4>
  </div>

  <div class="mt-3">
    <%= form_with url: mapple_game_path(@mapple_game), method: :get, data: { insert_question_target: "form", action: "submit->insert-question#next" } do |f| %>
      <%= f.text_field :query, autocomplete: 'off', placeholder: "Guess a country!", data: { insert_question_target: "input" }, class: "form-control form-rounded" %>
      <%= f.hidden_field :counter, value: @counter %>
      <div class="d-flex flex-column justify-content-center align-items-center mt-2">
        <%= f.submit 'Guess', class: 'MappleButton' %>
      </div>
    <% end %>
  </div>

   <% if @flag_image_url.present? %>
  <div class="mt-3" style="display: flex; flex-direction: column; align-items: center; text-align: center;">
    <p style="margin-bottom: 10px;"><strong>Hint:</strong></p>
    <img src="<%= @flag_image_url %>" alt="Flag Image" style="max-width: 300px; height: auto;">
  </div>
<% end %>


  <% @mapple_game.score -= @questions[@counter].difficulty if @guess && @guess != @mapple_game.country.name %>
  <% @mapple_game.save %>
  <%= @right_answer if @right_answer %>
</div>
